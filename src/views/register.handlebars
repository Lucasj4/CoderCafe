<div class="register__main">
  <div class="register__container">
    <h2 class="register__title">Registro</h2>
    <div class="register__formcontainer">
      <form class="register__form" action="/api/users/register" method="post">
        <div class="register__form__item">
          <label for="first_name" class="register__label">Nombre:</label>
          <input type="text" id="first_name" name="first_name" class="register__input" required />
        </div>
        <div class="register__form__item">
          <label for="last_name" class="register__label">Apellido:</label>
          <input type="text" id="last_name" name="last_name" class="register__input" required />
        </div>

        <div class="register__form__item">
          <label for="email" class="register__label">Email:</label>
          <input type="email" id="email" name="email" class="register__input" required />
        </div>
        <div class="register__form__item">
          <label for="password" class="register__label">Contrase√±a:</label>
          <input type="password" id="password" name="password" class="register__input" required />
        </div>
        <div class="register__form__item">
          <label for="age" class="register__label">Edad:</label>
          <input type="number" id="age" name="age" class="register__input" required />
        </div>

        <div class="register__form__button">
          <button type="submit" class="register__button">Registrar</button>
        </div>
      </form>
    </div>
  </div>
</div>

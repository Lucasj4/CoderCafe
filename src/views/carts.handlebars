<div class="cart__container">
  <h1 class="mb-4">Detalles del Carrito</h1>

  <p><strong>ID del Carrito:</strong> {{cartId}}</p>

  <h2 class="mb-4">Productos en el Carrito:</h2>
  <table class="cart__table ">
    <thead class="cart__table__thead">
      <tr>
        <th>Producto</th>
        <th>Precio</th>
        <th>Categoría</th>
        <th>Cantidad</th>
        <th>Stock</th>
        <th>Acción</th>
      </tr>
    </thead>
    <tbody class="cart__table__tbody">
      {{#each products}}
      <tr>
            <td class="cart__table__tbody-product">
                {{this.product.title}}
                <img src="{{this.product.img}}" alt="">
            </td>
            <td>${{this.totalPricePerProduct}}</td>
            <td>{{this.product.category}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.product.stock}}</td>
            <td><button onclick="eliminarProducto('{{../cartId}}', '{{this.product._id}}')" class="btn btn-danger">Eliminar</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <div class="d-flex justify-content-between align-items-center mb-4">
    {{!-- <button onclick="vaciarCarrito('{{cartId}}')" class="btn btn-danger">Vaciar Carrito</button> --}}
  
    <h3>Total ${{purchaseTotal}}</h3>
  </div>

  <div class="cart__actions">
    <a href="/products" > <i class="fa-solid fa-arrow-left"></i> Seguir comprando</a>
    <form method="post" action="/api/carts/{{cartId}}/purchase">
      <button type="submit" >Finalizar Compra</button>
    </form>
  </div>
</div>

<script src="../js/cartFunctions.mjs"></script>




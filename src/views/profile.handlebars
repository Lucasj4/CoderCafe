<h1>Mi Perfil</h1>

<div class="profile-card">
  <p>Bienvenido, {{user.first_name}} {{user.last_name}}!</p>
  <p>Rol: {{user.rol}}</p>

  <form action="/api/users/logout" method="POST">
    <button class="btnMios" type="submit">Logout</button>
  </form>

  {{#if this.isAdmin}}
    <a class="btnMios" href="/realtimeproducts">Modificar Productos</a>
  {{else}}
    <a href="/chat">Chat en vivo</a>
    <a href="/products">Tienda</a>
    <a href="/api/users/logout">Logout</a>
  {{/if}}
</div>